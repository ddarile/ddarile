        </div>
    </header>

    <!-- Анимированный фон с частицами -->
    <div class="animated-background">
        <div class="particles" id="particles"></div>
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
            <div class="shape shape-5"></div>
        </div>
    </div>

    <!-- Основной контент -->
    <main class="auth-main">
        <div class="auth-actions">
            <button class="auth-btn login-btn" id="loginBtn">
                <span class="btn-text">Войти</span>
                <div class="btn-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
                        <polyline points="10 17 15 12 10 7"></polyline>
                        <line x1="15" y1="12" x2="3" y2="12"></line>
                    </svg>
                </div>
            </button>

            <button class="auth-btn register-btn" id="registerBtn">
                <span class="btn-text">Зарегистрироваться</span>
                <div class="btn-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="8.5" cy="7" r="4"></circle>
                        <line x1="20" y1="8" x2="20" y2="14"></line>
                        <line x1="23" y1="11" x2="17" y2="11"></line>
                    </svg>
                </div>
            </button>
        </div>
    </main>

    <!-- Модальное окно входа -->
    <div class="modal-overlay" id="loginModal">
      <div class="modal-container">
        <div class="modal-header">
          <h2 class="modal-title">Вход в аккаунт</h2>
          <button class="modal-close" id="loginClose">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
        </div>

        <div class="modal-body">
          <form class="auth-form" id="loginForm" action="/profile/login" method="POST">
            <div class="form-group">
              <label class="form-label">Email</label>
              <div class="input-container">
                <input type="email" name="account_email" class="form-input" placeholder="Введите ваш email" required>
                <div class="input-validation" id="loginEmailValidation"></div>
              </div>
            </div>
        
            <div class="form-group">
              <label class="form-label">Пароль</label>
              <div class="input-container">
                <input type="password" name="account_password" class="form-input" placeholder="Введите пароль" required>
                <div class="input-validation" id="loginPasswordValidation"></div>
              </div>
            </div>
            <div class="form-group">
           <% if (errors && !Array.isArray(errors)) { %>
              <label class="form-label"><%= errors %></label>
              <script>
                const loginModal = document.getElementById("loginModal");
                if (loginModal) {
                  loginModal.classList.add("active");
                  document.body.style.overflow = "hidden";
                }
              </script>
            <% } %>

            </div>
            <button type="submit" class="submit-btn" id="loginSubmit">
              <span class="btn-text">Войти</span>
              <div class="btn-loader" id="loginLoader">
                <div class="loader-spinner"></div>
              </div>
            </button>
        
            <div class="form-footer">
              <p>Нет аккаунта? <a href="#" class="switch-form" id="switchToRegister">Зарегистрироваться</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>


    <!-- Модальное окно регистрации -->
    <div class="modal-overlay" id="registerModal">
        <div class="modal-container">
            <div class="modal-header">
                <h2 class="modal-title">Создание аккаунта</h2>
                <button class="modal-close" id="registerClose">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <form class="auth-form" id="registerForm" method="POST" action="/profile/register">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Имя</label>
                            <div class="input-container">
                                <input type="text" class="form-input" name="account_name" id="registerFirstName" placeholder="Ваше имя" required>
                                <div class="input-validation" id="registerFirstNameValidation"></div>
                            </div>
                        </div>
                    </div>
                
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <div class="input-container">
                            <input type="email" class="form-input" name="account_email" id="registerEmail" placeholder="Введите ваш email" required>
                            <div class="input-validation" id="registerEmailValidation"></div>
                        </div>
                    </div>
                
                    <div class="form-group">
                        <label class="form-label">Пароль</label>
                        <div class="input-container">
                            <input type="password" class="form-input" name="account_password" id="registerPassword" placeholder="Создайте пароль" required>
                            <div class="input-validation" id="registerPasswordValidation"></div>
                        </div>
                        <div class="password-strength" id="passwordStrength">
                            <div class="strength-bar">
                                <div class="strength-fill" id="strengthFill"></div>
                            </div>
                            <div class="strength-text" id="strengthText">Введите пароль</div>
                        </div>
                    </div>
                
                    <div class="form-group">
                        <label class="form-label">Подтверждение пароля</label>
                        <div class="input-container">
                            <input type="password" class="form-input" id="registerPasswordConfirm" placeholder="Повторите пароль" required>
                            <div class="input-validation" id="registerPasswordConfirmValidation"></div>
                        </div>
                    </div>
                
                    <% if (Array.isArray(errors)) { %>
                      <% errors.forEach(function(error) { %>
                        <label class="form-label"><%= error %></label>
                      <% }); %>
                      <script>
                        const regnModal = document.getElementById("registerModal");
                        if (regnModal) {
                          regnModal.classList.add("active");
                          document.body.style.overflow = "hidden";
                        }
                      </script>
                    <% } %>

                
                    <button type="submit" class="submit-btn" id="registerSubmit">
                        <span class="btn-text">Создать аккаунт</span>
                        <div class="btn-loader" id="registerLoader">
                            <div class="loader-spinner"></div>
                        </div>
                    </button>
                
                    <div class="form-footer">
                        <p>Уже есть аккаунт? <a href="#" class="switch-form" id="switchToLogin">Войти</a></p>
                    </div>
                </form>

            </div>
        </div>
    </div>

